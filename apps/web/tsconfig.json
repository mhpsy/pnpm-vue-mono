{
    "extends": ["../../tsconfig.base.json", "@vue/tsconfig/tsconfig.dom.json"],
    "include": ["vue-shims.d.ts", "env.d.ts", "src/**/*", "src/**/*.vue"],
    "exclude": ["src/**/__tests__/*"],
    "compilerOptions": {
        "module": "ESNext",
        "composite": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
        "moduleResolution": "node",
        "verbatimModuleSyntax": false
    }
}
